                    <th class="col">Pieza Reparada</th>
                    <th class="col">Precio</th>
                  </tr>
                </thead>
                <tbody>
                  <%for(repairRow of repairRows){%>
                          <tr class="d-flex">
                            <td class="col"><%=repairRow.part%></td>
                            <td class="col"><%=repairRow.cost%></td>
                          </tr>
                  <%}%>
                </tbody>
              </table>
            </div>
          </div>

      </div>
