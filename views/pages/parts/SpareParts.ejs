<div class="page-breadcrumb">
  <div class="row">
      <div class="col-5 align-self-center">
      </div>
      <div class="col-7 align-self-center">
          <div class="d-flex align-items-center justify-content-end">
              <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                          <a href="#">Home</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">Repuestos</li>
                  </ol>
              </nav>
          </div>
      </div>
  </div>
</div>
<div class="row">
  <!-- column -->
  <div class="col-12">
      <div class="card">
          <div class="card-header">
            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/parts/new" aria-expanded="false">
                <i class="mdi mdi-plus-circle-outline"></i>
                <span class="hide-menu">Nuevo Respuesto</span>
            </a>
          </div>
          <div class="card-body">
            <h3 class="card-title"><b>Repuestos</b></h3>
            <div class="table-responsive text-center" style="height:500px; width: 100%">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="border-top-0" style="width: 8%; text-align: center;">CODIGO INTERNO</th>
                            <th class="border-top-0" style="width: 12%; text-align: center;">CODIGO EXTERNO</th>
                            <th class="border-top-0" style="width: 10%; text-align: center;">TIPO</th>
                            <th class="border-top-0" style="width: 10%; text-align: center;">APLICACION</th>
                            <th class="border-top-0" style="width: 7%; text-align: center;">MARCA</th>
                            <th class="border-top-0" style="width: 7%; text-align: center;">MODELO</th>
                            <th class="border-top-0" style="width: 7%; text-align: center;">STOCK</th>
                            <% if(req.session.authenticated && req.session.User.permissions === "admin"){ %>
                                <th class="border-top-0" style="width: 7%; text-align: center;">ACCIÃ“N</th>
                            <%}%>
                        </tr>
                    </thead>
                    <tbody>
                      <% parts.forEach(function(parts){ %>
                        <tr>
                            <td class="txt-oflo"><%= parts.internalCode %></td>
                            <td class="txt-oflo"><%= parts.externalCode %></td>
                            <td class="txt-oflo"><%= parts.type %></td>
                            <td class="txt-oflo"><%= parts.application %></td>
                            <td class="txt-oflo"><%= parts.brand %></td>
                            <td class="txt-oflo"><%= parts.model %></td>
                            <td class="txt-oflo"><%= parts.stock %></td>
                            <% if(req.session.authenticated && req.session.User.permissions === "admin"){ %>
                                <td class="txt-oflo"><a href="/parts/delete/<%= parts.id %>"class="btn btn-danger"><i class="mdi mdi-delete"></i></a></td>
                            <%}%>
                        </tr>
                      <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

      </div>
  </div>
</div>
