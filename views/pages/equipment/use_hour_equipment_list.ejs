<div class="page-breadcrumb">
  <div class="row">
      <div class="col-5 align-self-center">
      </div>
      <div class="col-7 align-self-center">
          <div class="d-flex align-items-center justify-content-end">
              <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                          <a href="/">Home</a>
                      </li>
                      <li class="breadcrumb-item">
                          <a href="/equipment/list">Equipos</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">Horas de Uso de Equipos</li>
                  </ol>
              </nav>
          </div>
      </div>
  </div>
</div>
<div class="row">
  <!-- column -->
  <div class="col-12">
      <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-8">
                <% if(typeof constructionSite != "undefined"){%>
                  <h3 class="card-title"><b>Equipos en <%=constructionSite.name%>, <%=constructionSite.district%>, <%=constructionSite.province%></b></h3>
                <%}else{%>
                  <h3 class="card-title"><b>Equipos</b></h3>
                <%}%>
              </div>
              <div class="col-4">
                <div class="input-group md-form form-sm form-1 pl-0">
                  <div class="input-group-prepend">
                    <span class="input-group-text cyan lighten-2" id="basic-text1">
                      <i class="fas fa-search" aria-hidden="true"></i>
                    </span>
                  </div>
                  <input class="form-control" id="filterList" type="text" placeholder="Buscar...">
                </div>
              </div>
            </div>
            <div class="table-responsive text-center" style="height:500px; width: 100%">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="border-top-0" style="width: 8%; text-align: center;">CÓDIGO</th>
                            <th class="border-top-0" style="width: 17%; text-align: center;">DESIGNACIÓN</th>
                            <th class="border-top-0" style="width: 17%; text-align: center;">MARCA</th>
                            <th class="border-top-0" style="width: 8%; text-align: center;">MODELO</th>
                            <th class="border-top-0" style="width: 17%; text-align: center;">HORÓMETRO</th>
                            <th class="border-top-0" style="width: 33%; text-align: center;">ADMINISTRAR HORAS</th>
                        </tr>
                    </thead>
                    <tbody id="bodyTable">
                      <% equipments.forEach(function(equipment){ %>
                        <tr>
                            <td class="txt-oflo align-middle"><%= equipment.code %></td>
                            <td class="txt-oflo align-middle"><%= equipment.designation %></td>
                            <td class="txt-oflo align-middle"><%= equipment.brand %></td>
                            <td class="txt-oflo align-middle"><%= equipment.model %></td>
                            <td class="txt-oflo align-middle"><%= equipment.totalHours %></td>
                            <td class="txt-oflo align-middle">
                              <form class="form-horizontal" method="post" action="/equipmentusehour/new/<%=equipment.id%>">
                                <div class="input-group">
                                  <input type="text" min="0" name="datepicker" class="form-control" width="150">
                                  <input type="number" min="0" name="timeOfUse" placeholder="Horas de Uso" class="form-control">
                                  <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" onclick="location.href='/equipment/new_use_hour/<%=equipment.id%>?time='" type="submit"><i class="mdi mdi-plus-circle"></i></button>
                                  </div>
                                </div>
                              </form>
                            </td>
                        </tr>
                      <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
  </div>
</div>
