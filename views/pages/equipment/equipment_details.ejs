    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-10">
            <h3 class="card-title">Reparaciones</h3>
          </div>
          <div class="col-2">
            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="#" aria-expanded="false">
                <i class="mdi mdi-plus-circle-outline"></i>
                <span class="hide-menu">Nueva Reparacion</span>
            </a>
