<div class="page-breadcrumb">
  <div class="row">
      <div class="col-5 align-self-center">
      </div>
      <div class="col-7 align-self-center">
          <div class="d-flex align-items-center justify-content-end">
              <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                      <li class="breadcrumb-item">
                          <a href="#">Home</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">Equipos</li>
                  </ol>
              </nav>
          </div>
      </div>
  </div>
</div>
<div class="row">
  <!-- column -->
  <div class="col-12">
      <div class="card">
          <div class="card-header">
            <a class="sidebar-link waves-effect waves-dark sidebar-link" href="/equipment/new" aria-expanded="false">
                <i class="mdi mdi-plus-circle-outline"></i>
                <span class="hide-menu">Nuevo Equipo</span>
            </a>
          </div>
          <div class="card-body">
            <h3 class="card-title"><b>Equipos</b></h3>
            <div class="table-responsive text-center">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="border-top-0" style="width: 8%; text-align: center;">CÓDIGO</th>
                            <th class="border-top-0" style="width: 12%; text-align: center;">DESIGNACIÓN</th>
                            <th class="border-top-0" style="width: 10%; text-align: center;">MARCA</th>
                            <th class="border-top-0" style="width: 10%; text-align: center;">MODELO</th>
                            <th class="border-top-0" style="width: 7%; text-align: center;">ÍNDICE MANTENIBILIDAD</th>
                            <th class="border-top-0" style="width: 7%; text-align: center;">ÍNDICE REPARABILIDAD</th>
                            <th class="border-top-0" style="width: 7%; text-align: center;">HORÓMETRO</th>
                            <th class="border-top-0" style="width: 25%; text-align: center;">PRÓXIMO MANTENIMIENTO</th>
                            <th class="border-top-0" colspan="2" style="width: 14%; text-align: center;">DETALLES</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% equipments.forEach(function(equipment){ %>
                        <tr>
                            <td class="txt-oflo"><%= equipment.code %></td>
                            <td class="txt-oflo"><%= equipment.designation %></td>
                            <td class="txt-oflo"><%= equipment.brand %></td>
                            <td class="txt-oflo"><%= equipment.model %></td>
                            <td class="txt-oflo"><!--%= equipment.indiceMantenibilidad %-->1</td>
                            <td class="txt-oflo"><!--%= equipment.indiceReparabilidad %-->1</td>
                            <td class="txt-oflo"><%= equipment.totalHours %></td>
                            <td class="txt-oflo align-middle">

                            </td>
                            <td style="width: 50%; text-align: center;">
                              <button class="btn btn-success"><i class="mdi mdi-file-find"></i></button>
                            </td>
                            <td style="width: 50%; text-align: center;">
                              <button class="btn btn-danger"><i class="mdi mdi-delete"></i></button>
                            </td>
                        </tr>
                      <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
      </div>
  </div>
</div>
